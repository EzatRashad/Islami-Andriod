<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="18dp"
    android:paddingTop="20dp">


    <TextView
        android:id="@+id/chapterNameEnglish"
        style="@style/LargeText"
        android:textColor="@color/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layoutDirection="ltr"

        android:id="@+id/imageLeft"
        android:src="@drawable/chapter_details_icon_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chapterNameEnglish"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layoutDirection="ltr"

        android:id="@+id/iconBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toTopOf="@id/imageLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layoutDirection="ltr"

        android:id="@+id/imageRight"
        android:src="@drawable/chapter_details_icon_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chapterNameEnglish"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/chapterNameArabic"
        style="@style/LargeText"
        android:textColor="@color/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chapterNameEnglish"
        app:layout_constraintStart_toEndOf="@id/imageLeft"
        app:layout_constraintEnd_toStartOf="@id/imageRight"/>

    <TextView
        android:id="@+id/basmalaText"
        style="@style/LargeText"
        android:text="بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ"
        android:textColor="@color/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/chapterNameArabic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
